// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserRole {
  AUTHOR
  EDITOR
  REVIEWER
}

enum ArticleStatus {
  SUBMITTED
  UNDER_REVIEW
  REVISION_REQUESTED
  ACCEPTED
  REJECTED
  PUBLISHED
}

enum ReviewStatus {
  PENDING
  COMPLETED
}

enum ReviewRecommendation {
  ACCEPT
  REJECT
  MAJOR_REVISION
  MINOR_REVISION
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole
  approvalStatus ApprovalStatus  @default(PENDING)
  affiliation   String?
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  articles          Article[]       @relation("AuthorArticles")
  reviews           Review[]        @relation("ReviewerReviews")
  reviewingArticles Article[]       @relation("ReviewerArticles")
  notifications     Notification[]
  
  @@index([email])
  @@index([role])
}

model Article {
  id            String         @id @default(cuid())
  title         String
  abstract      String         @db.Text
  keywords      String[]
  authors       String[]       // Array of author names
  authorId      String
  pdfUrl        String?
  pdfKey        String?        // UploadThing file key
  status        ArticleStatus  @default(SUBMITTED)
  editorFeedback String?
  submittedAt   DateTime       @default(now())
  publishedAt   DateTime?
  issueId       String?
  reviewerId    String?        // Assigned reviewer
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relations
  author        User           @relation("AuthorArticles", fields: [authorId], references: [id])
  reviewer      User?          @relation("ReviewerArticles", fields: [reviewerId], references: [id])
  reviews       Review[]
  issue         Issue?         @relation(fields: [issueId], references: [id])
  notifications Notification[]
  
  @@index([authorId])
  @@index([reviewerId])
  @@index([status])
  @@index([submittedAt])
}

model Review {
  id              String                @id @default(cuid())
  articleId       String
  reviewerId      String
  comments        String?               @db.Text
  confidential    String?               @db.Text  // Comments only for editor
  recommendation  ReviewRecommendation?
  status          ReviewStatus          @default(PENDING)
  submittedAt     DateTime?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  
  // Relations
  article         Article               @relation(fields: [articleId], references: [id], onDelete: Cascade)
  reviewer        User                  @relation("ReviewerReviews", fields: [reviewerId], references: [id])
  
  @@index([articleId])
  @@index([reviewerId])
  @@index([status])
}

model Issue {
  id            String    @id @default(cuid())
  volume        Int
  number        Int
  year          Int
  publishedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  articles      Article[]
  
  @@unique([volume, number, year])
  @@index([year])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // "ARTICLE_ASSIGNED", "REVIEW_SUBMITTED", "DECISION_MADE", etc.
  title     String
  message   String   @db.Text
  
  articleId String?
  article   Article? @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  read      Boolean  @default(false)
  link      String?  // Optional link to navigate to
  createdAt DateTime @default(now())
  
  @@index([userId, read])
  @@index([createdAt])
}
